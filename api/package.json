{
  "name": "netia-bot-safe",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "check:health": "node tests/check.mjs health",
    "check:webhook": "node tests/check.mjs webhook",
    "test:conversations": "node tests/run.mjs",
    "test:conversations:live": "node tests/run.mjs --live",
    "test:load": "node tests/load.mjs",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.19.2",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.3.0",
    "ajv": "^8.17.1",
    "prom-client": "^15.1.3",
    "cors": "^2.8.5",
    "pino": "^9.2.0",
    "pino-http": "^10.3.0",
    "ioredis": "^5.4.1",
    "rate-limit-redis": "^4.0.0",
    "pg": "^8.11.5",
    "openai": "^4.54.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.13.0",
    "@eslint/js": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "commonjs",
      "project": "./tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "no-console": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "printWidth": 100
  }
}
