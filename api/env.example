# =============================================================================
# NETIA AI CHATBOT - MULTI-TENANT SAAS ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# NECESSARY - Core Application Settings
# =============================================================================

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database (Required for multi-tenancy) - Neon Database
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# Redis (Required for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# OpenAI (Required for AI responses)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# JWT Secret (Required for authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# =============================================================================
# NECESSARY - Multi-Tenant Configuration
# =============================================================================

# API Key Configuration
API_KEY_LENGTH=32
API_KEY_PREFIX=nt_

# Tenant Configuration
DEFAULT_TENANT_PLAN=starter
MAX_TENANTS_PER_IP=5

# =============================================================================
# NECESSARY - Billing & Payments (Stripe)
# =============================================================================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Subscription Plans
STRIPE_STARTER_PLAN_ID=price_starter_monthly
STRIPE_GROWTH_PLAN_ID=price_growth_monthly
STRIPE_ENTERPRISE_PLAN_ID=price_enterprise_monthly

# =============================================================================
# NECESSARY - Frontend Applications
# =============================================================================

# Admin Dashboard
ADMIN_DASHBOARD_URL=http://localhost:3001
ADMIN_DASHBOARD_SECRET=admin-dashboard-secret-key

# Customer Portal
CUSTOMER_PORTAL_URL=http://localhost:3002
CUSTOMER_PORTAL_SECRET=customer-portal-secret-key

# =============================================================================
# OPTIONAL - Development & Testing
# =============================================================================

# Safety Flags (Development)
DRY_RUN=true
KILL_SWITCH=false
DEMO_MODE=true

# Testing - Neon Database (test branch)
TEST_DATABASE_URL=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/neondb_test?sslmode=require
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# OPTIONAL - Crisp Integration (Per Tenant)
# =============================================================================

# Default Crisp Settings (can be overridden per tenant)
DEFAULT_CRISP_IDENTIFIER=
DEFAULT_CRISP_KEY=
DEFAULT_CRISP_WEBSITE_ID=
DEFAULT_CRISP_WEBHOOK_SECRET=

# =============================================================================
# OPTIONAL - Email & Notifications
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@netia.ai

# Email Templates
WELCOME_EMAIL_TEMPLATE=welcome
RESET_PASSWORD_TEMPLATE=reset-password
BILLING_EMAIL_TEMPLATE=billing

# =============================================================================
# OPTIONAL - Analytics & Monitoring
# =============================================================================

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# =============================================================================
# OPTIONAL - Security & Rate Limiting
# =============================================================================

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3002,https://admin.netia.ai,https://app.netia.ai

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
COOKIE_SECRET=your-cookie-secret-key

# =============================================================================
# OPTIONAL - File Storage & CDN
# =============================================================================

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=netia-chatbot-uploads

# CDN
CDN_URL=https://cdn.netia.ai

# =============================================================================
# OPTIONAL - Third-Party Integrations
# =============================================================================

# Calendar Integrations
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret

# CRM Integrations
HUBSPOT_API_KEY=your-hubspot-api-key
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret

# =============================================================================
# OPTIONAL - Advanced Features
# =============================================================================

# Multi-language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de

# White-label Configuration
DEFAULT_BRAND_COLOR=#3B82F6
DEFAULT_BRAND_LOGO=https://cdn.netia.ai/logo.png

# Enterprise Features
SSO_PROVIDER=okta
SSO_CLIENT_ID=your-sso-client-id
SSO_CLIENT_SECRET=your-sso-client-secret
SSO_DOMAIN=your-company.okta.com

